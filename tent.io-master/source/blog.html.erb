---
pageable: true
per_page: 3
layout: blog_layout
---

<% page_articles.each_with_index do |article, i| %>
  <article>
    <header>
      <time datetime="<%= article.date.to_s %>"><%= article.date.strftime('%b %e, %Y') %></time>
      <h2><%= link_to article.title, article.url.sub('.html', '') %></h2>
    </header>

    <%= article.body %>
  </article>
<% end %>

<% if paginate %>
  <%= partial 'blog_pagination', :locals => locals %>
<% end %>
